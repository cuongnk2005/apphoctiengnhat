    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Nền mờ khi mở menu -->
        <View
            android:id="@+id/fab_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:alpha="0"
            android:visibility="gone"/>

        <!-- Container chứa toàn bộ menu FAB -->
        <LinearLayout
            android:id="@+id/fab_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <!-- Menu item 1: Nhận bộ thẻ đã chia sẻ -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab_shared_decks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nhận các bộ thẻ"
                android:textColor="@color/white"
                android:backgroundTint="@color/primaryColor"
                android:visibility="gone"
                app:icon="@drawable/ic_download"
                app:iconTint="@color/white"/>

            <!-- Menu item 2: Tạo bộ thẻ đã lọc -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab_filter_decks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Bộ thẻ đã lọc"
                android:textColor="@color/white"
                android:backgroundTint="@color/primaryColor"
                android:visibility="gone"
                app:icon="@drawable/ic_filter"
                app:iconTint="@color/white"/>

            <!-- Menu item 3: Tạo bộ thẻ -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab_create_deck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tạo bộ thẻ"
                android:textColor="@color/white"
                android:backgroundTint="@color/primaryColor"
                android:visibility="gone"
                app:icon="@drawable/ic_add_tag"
                app:iconTint="@color/white"/>

            <!-- Menu item 4: Thêm -->
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab_add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Thêm"
                android:textColor="@color/white"
                android:backgroundTint="@color/primaryColor"
                android:visibility="gone"
                app:icon="@drawable/ic_add_card"
                app:iconTint="@color/white"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/primaryColor"
                android:contentDescription="Thêm phương tiện"
                android:src="@drawable/ic_add_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/white" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

