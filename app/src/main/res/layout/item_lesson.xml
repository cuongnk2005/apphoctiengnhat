<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

    <androidx.cardview.widget.CardView
    android:id="@+id/lesson_number_card"
    android:layout_width="60dp"
    android:layout_height="60dp"
    app:cardBackgroundColor="@color/secondaryColor"
    app:cardCornerRadius="30dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <!-- Tăng kích thước của ImageView -->
    <ImageView
        android:id="@+id/lesson_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/avatar"
        android:scaleType="centerCrop"
        android:contentDescription="Lesson Number Image" />
</androidx.cardview.widget.CardView>

<TextView
android:id="@+id/lesson_title"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginStart="12dp"
android:layout_marginEnd="8dp"
android:text="Tên bài học"
android:textSize="16sp"
android:textStyle="bold"
app:layout_constraintEnd_toStartOf="@+id/btn_play"
app:layout_constraintStart_toEndOf="@+id/lesson_number_card"
app:layout_constraintTop_toTopOf="parent" />

<TextView
android:id="@+id/lesson_description"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_marginStart="12dp"
android:layout_marginTop="4dp"
android:layout_marginEnd="8dp"
android:text="Mô tả ngắn về bài học"
android:textColor="@color/secondaryTextColor"
android:textSize="14sp"
app:layout_constraintEnd_toStartOf="@+id/btn_play"
app:layout_constraintStart_toEndOf="@+id/lesson_number_card"
app:layout_constraintTop_toBottomOf="@+id/lesson_title" />

<ImageButton
android:id="@+id/btn_play"
android:layout_width="48dp"
android:layout_height="48dp"
android:background="?attr/selectableItemBackgroundBorderless"
android:contentDescription="Play lesson"
android:src="@drawable/ic_play"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:tint="@color/primaryColor" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
