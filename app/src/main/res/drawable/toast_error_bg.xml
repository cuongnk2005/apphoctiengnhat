<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <corners android:radius="8dp" />
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp" />
            <solid android:color="#33000000" />
        </shape>
    </item>
    <!-- Background Layer -->
    <item>
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:angle="45"
                android:startColor="#D32F2F"
                android:endColor="#C62828" />
        </shape>
    </item>
</layer-list>